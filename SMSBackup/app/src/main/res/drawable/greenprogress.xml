<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:centerColor="#ffffff"
                android:endColor="#ffffff"
                android:startColor="#ffffff" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:centerColor="@color/btn_red_normal"
                    android:endColor="@color/btn_red_normal"
                    android:startColor="@color/btn_red_normal" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:endColor="@color/btn_green_normal"
                    android:startColor="@color/btn_green_normal" />
            </shape>
        </clip>
    </item>

</layer-list>